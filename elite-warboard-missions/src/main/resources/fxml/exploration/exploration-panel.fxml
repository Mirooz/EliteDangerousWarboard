<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="be.mirooz.elitedangerous.dashboard.controller.ExplorationController"
      styleClass="exploration-panel" spacing="10">

    <!-- Zone principale : Panel haut + Panel gauche (Vue visuelle) + Panel droit (Détails + Historique) -->
    <HBox spacing="20" styleClass="exploration-content" VBox.vgrow="ALWAYS">
        
        <!-- Colonne gauche : Panel haut (Info système avec Stats intégrées) + Vue visuelle -->
        <VBox spacing="10" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
            <!-- Panneau de gauche : Vue visuelle du système -->
            <VBox fx:id="systemVisualViewContainer" spacing="10" styleClass="exploration-visual-view" VBox.vgrow="ALWAYS" minWidth="400"/>
        </VBox>
        
        <!-- Panneau de droite : Historique avec navigation + Liste des systèmes visités -->
        <VBox spacing="10" styleClass="exploration-right-panel" minWidth="450" maxWidth="500" VBox.vgrow="ALWAYS">
            <VBox fx:id="explorationHistoryDetailContainer" spacing="10" VBox.vgrow="ALWAYS"/>
        </VBox>
    </HBox>
</VBox>

