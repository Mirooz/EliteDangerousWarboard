<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="be.mirooz.elitedangerous.dashboard.controller.ui.component.exploration.ExplorationDetailComponent"
      spacing="10" styleClass="exploration-detail-panel" VBox.vgrow="ALWAYS" minWidth="350">

    <Label text="DÉTAILS DU GROUPE" styleClass="exploration-section-title"/>
    
    <!-- Informations générales (simplifiées) -->
    <VBox fx:id="generalInfoContainer" spacing="3" styleClass="exploration-detail-section" visible="false">
        <Label fx:id="detailTotalEarningsLabel" styleClass="exploration-detail-label"/>
        <Label fx:id="detailSystemsCountLabel" styleClass="exploration-detail-label"/>
    </VBox>
    
    <!-- Liste des systèmes visités (simplifiée avec tooltips) -->
    <VBox spacing="5" styleClass="exploration-detail-section" VBox.vgrow="ALWAYS">
        <Label text="SYSTÈMES VISITÉS" styleClass="exploration-subsection-title"/>
        <ScrollPane fx:id="systemsScrollPane" styleClass="exploration-detail-scroll" 
                   fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED" VBox.vgrow="ALWAYS">
            <VBox fx:id="systemsList" spacing="3" styleClass="exploration-systems-list"/>
        </ScrollPane>
    </VBox>
</VBox>

