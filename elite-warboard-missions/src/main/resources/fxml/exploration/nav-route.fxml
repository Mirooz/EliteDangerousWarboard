<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="be.mirooz.elitedangerous.dashboard.view.exploration.NavRouteComponent"
      fx:id="navRouteContainer"
      styleClass="nav-route-panel" spacing="10"
      minHeight="120" prefHeight="120" maxHeight="120">
    
    <padding>
        <Insets top="10" right="15" bottom="10" left="15"/>
    </padding>
    
    <!-- En-tête avec titre et sélecteur de mode -->
    <HBox alignment="CENTER_LEFT" spacing="20" styleClass="nav-route-header">
        <Label fx:id="routeTitleLabel" text="ROUTE DE NAVIGATION" styleClass="nav-route-title"/>
        <Separator orientation="VERTICAL" styleClass="nav-route-separator"/>
        <HBox fx:id="modeSelectorContainer" spacing="10" alignment="CENTER_LEFT" styleClass="nav-route-mode-selector"/>
        <Separator orientation="VERTICAL" styleClass="nav-route-separator"/>
        <Label fx:id="modeDescriptionLabel" styleClass="nav-route-mode-description" wrapText="true" HBox.hgrow="ALWAYS"/>
    </HBox>
    
    <!-- Pane pour la représentation graphique des systèmes avec indicateur de chargement -->
    <StackPane alignment="CENTER">
        <ScrollPane fx:id="routeScrollPane" fitToWidth="true" fitToHeight="false" 
                    styleClass="nav-route-scroll" 
                    hbarPolicy="AS_NEEDED" 
                    vbarPolicy="NEVER"
                    minHeight="70" 
                    prefHeight="70"
                    maxHeight="70">
            <Pane fx:id="routeSystemsPane" styleClass="nav-route-systems-pane"/>
        </ScrollPane>
        
        <!-- Indicateur de chargement -->
        <ProgressIndicator fx:id="loadingIndicator" 
                          styleClass="progress-indicator" 
                          visible="false" 
                          prefWidth="60" 
                          prefHeight="60"
                          minWidth="60" 
                          minHeight="60"
                          maxWidth="60" 
                          maxHeight="60"/>
    </StackPane>
    
</VBox>

