<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="be.mirooz.elitedangerous.dashboard.view.exploration.NavRouteComponent"
      fx:id="navRouteContainer"
      styleClass="nav-route-panel" spacing="10"
      minHeight="120" prefHeight="120" maxHeight="120">
    
    <padding>
        <Insets top="10" right="15" bottom="10" left="15"/>
    </padding>
    
    <!-- En-tÃªte avec titre et sÃ©lecteur de mode -->
    <HBox alignment="CENTER_LEFT" spacing="20" styleClass="nav-route-header">
        <Label fx:id="routeTitleLabel" text="ROUTE DE NAVIGATION" styleClass="nav-route-title"/>
        <Button fx:id="overlayButton" styleClass="elite-nav-button" onAction="#showNavRouteOverlay" text="ðŸ—” Overlay"/>
        <Separator orientation="VERTICAL" styleClass="nav-route-separator"/>
        <HBox fx:id="modeSelectorContainer" spacing="10" alignment="CENTER_LEFT" styleClass="nav-route-mode-selector"/>
        <Separator orientation="VERTICAL" styleClass="nav-route-separator"/>
        <VBox fx:id="modeDescriptionContainer" spacing="4" HBox.hgrow="NEVER">
            <Label fx:id="modeDescriptionLabel" styleClass="nav-route-mode-description" wrapText="true"/>
            <!-- Champs pour destination et max systems (visibles uniquement pour expressway et road to riches) -->
            <HBox fx:id="routeParamsContainer" spacing="4" alignment="CENTER_LEFT" visible="false" managed="false">
                <Label text="dest." styleClass="nav-route-param-label" minWidth="35" prefWidth="35"/>
                <TextField fx:id="destinationSystemField" promptText="Optional" prefWidth="95" maxWidth="95" minWidth="70"/>
                <Label text="max:" styleClass="nav-route-param-label" minWidth="30" prefWidth="30"/>
                <TextField fx:id="maxSystemsField" promptText="10" prefWidth="42" maxWidth="42" minWidth="35"/>
            </HBox>
        </VBox>
        <Button fx:id="stratumInfoButton" styleClass="nav-route-info-button" visible="false" managed="false" 
                minWidth="20" maxWidth="20" minHeight="20" maxHeight="20">
            <graphic>
                <Label text="?" styleClass="nav-route-info-icon"/>
            </graphic>
        </Button>
        <Button fx:id="reloadButton" styleClass="nav-route-reload-button" visible="false" managed="false" 
                onAction="#onReloadButtonClicked" text="Reload">
        </Button>
        <Separator orientation="VERTICAL" styleClass="nav-route-separator"/>
        <Label fx:id="remainingJumpsLabel" text="" styleClass="nav-route-remaining-jumps"/>
    </HBox>
    
    <!-- Pane pour la reprÃ©sentation graphique des systÃ¨mes avec indicateur de chargement -->
    <StackPane alignment="CENTER">
        <Pane fx:id="routeSystemsPane" styleClass="nav-route-systems-pane"
              minHeight="70" 
              prefHeight="70"
              maxHeight="70"/>
        
        <!-- Indicateur de chargement -->
        <ProgressIndicator fx:id="loadingIndicator" 
                          styleClass="progress-indicator" 
                          visible="false" 
                          prefWidth="60" 
                          prefHeight="60"
                          minWidth="60" 
                          minHeight="60"
                          maxWidth="60" 
                          maxHeight="60"/>
    </StackPane>
    
</VBox>

